<%#= render :partial => 'clinic/nav', :locals => {:active => 'reports', :label => "Reports"} %>
<script type="text/javascript">
  jQuery(document).ready(function($) {
  }) 
</script>
<style type="text/css">
  #stats {
    width:98%;
    border:1px solid black;
    margin:10px;    
    background:white;
  } 
  #stats td{
    text-align:right;
  }

  #stats a { 
    width:155px; 
    float:right;
  }
</style>
<%= stylesheet_link_tag 'extra_buttons' %>

<div id="tab" style="height: 100%; width: 100%; overflow: auto;">
    <h2 style="margin-left: 8px;">Select report to view</h2>
    <table id="stats" style="height: 303px;" cellpadding="10">
      <% if  Encounter.count > 0 %>
        <% (@reports || []).each do |name,path| %>
          <tr>
            <td><a href="<%=path%>" class='report_button'><%=name%></a></td>
          </tr>
        <%end%>
      <%end%>
    </table> 
</div>
